rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Classes (Modules) collection
    match /classes/{classId} {
      // Users can read their own classes
      allow read: if isOwner(resource.data.userId);
      
      // Users can create classes with their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own classes
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own classes
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Users collection (for user profiles/settings)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile
      allow create: if isAuthenticated() && userId == request.auth.uid;
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
